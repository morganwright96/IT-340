extends layout

block content
    +head("Login")
    include nav.pug
    +nav()
    body.background
        div.container
            div.row
                div.col-sm-9.col-md-7.col-lg-5.mx-auto
                    div.card.card-signin.my-5
                        div.card-body
                            h5.card-title.text-center.gotham-bold Sign In
                            form.form-signin(method='POST' action='/users/login')
                                div.form-label-group.mb-2
                                    label(for="username") Email address / Username
                                    input.form-control(type="text" id="username" placeholder="Email/Username" name="username" required autofocus)
                                div.form-label-group.mb-2
                                    label(for="inputPassword") Password
                                    input.form-control(type="password" id="inputPassword" placeholder="Password" name="password" required)
                                div.custom-control.custom-checkbox.mb-3
                                    input.custom-control-input(type="checkbox" id="customCheck1")
                                    label.custom-control-label(for="customCheck1") Remember password
                                div.form-label-group.mb-2
                                    p No Account? 
                                        a(href='/users/register') Register
                                div.form-lable-group.mb-2
                                    input.btn.btn-lg.btn-primary.btn-block.text-uppercase(type="submit" value="Login")